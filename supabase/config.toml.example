# Supabase Configuration Example
# Copy this to config.toml if using Supabase CLI for local development

[project]
# Your project reference ID (found in your Supabase project URL)
# ref = "your-project-ref"

[auth]
# Enable email authentication
enabled = true
site_url = "http://localhost:3000"
additional_redirect_urls = ["https://yourdomain.com"]

[api]
# API configuration
enabled = true
port = 54321

[db]
# Database configuration
port = 54322
shadow_port = 54320

[studio]
# Supabase Studio configuration
enabled = true
port = 54323

# For full configuration options, see:
# https://supabase.com/docs/reference/cli/config-toml

